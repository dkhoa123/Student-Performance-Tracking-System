@model SPTS_Service.ViewModel.GiangvienVm.ThongBaoPageVm
@{
    Layout = "~/Views/Shared/_LayoutGiangvien.cshtml";
}

<main class="flex flex-1 flex-col h-full overflow-hidden bg-background-light dark:bg-background-dark relative">
    <div class="flex-1 overflow-y-auto p-4 md:p-8">
        <div class="mx-auto max-w-7xl space-y-6 pb-10">

            @* TempData messages *@
            @if (TempData["Success"] != null)
            {
                <div class="rounded-lg bg-green-50 dark:bg-green-900/20 p-4 text-green-800 dark:text-green-200 border border-green-200 dark:border-green-800">
                    @TempData["Success"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="rounded-lg bg-red-50 dark:bg-red-900/20 p-4 text-red-800 dark:text-red-200 border border-red-200 dark:border-red-800">
                    @TempData["Error"]
                </div>
            }

            @* Section:  Chọn lớp *@
            <div class="rounded-2xl border border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-900 p-6 shadow-sm">
                <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-5">
                    <div class="flex items-center gap-4">
                        <div class="flex size-12 shrink-0 items-center justify-center rounded-xl bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400">
                            <span class="material-symbols-outlined text-2xl">checklist</span>
                        </div>
                        <div>
                            <h2 class="text-base font-bold text-slate-900 dark:text-white">Chọn Lớp Học</h2>
                            <p class="text-sm text-slate-500 dark:text-slate-400">Chọn một lớp để xem danh sách sinh viên và gửi thông báo</p>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                    @foreach (var sec in Model.AvailableSections)
                    {
                        <a asp-action="ThongBao" asp-route-sectionId="@sec.SectionId"
                           class="@(sec.IsSelected ? "relative flex flex-col gap-3 rounded-2xl border-2 border-primary bg-blue-50/40 dark:bg-primary/10 p-4 text-left shadow-sm transition-all ring-1 ring-primary/20" : "group flex flex-col gap-3 rounded-2xl border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900 p-4 text-left hover:border-primary/50 hover:bg-slate-50 dark:hover:bg-slate-800 transition-all hover:shadow-sm")">
                            <div class="flex items-center justify-between w-full">
                                <div class="@(sec.IsSelected ? "flex size-10 shrink-0 items-center justify-center rounded-lg bg-primary text-white shadow-sm" : "flex size-10 shrink-0 items-center justify-center rounded-lg bg-slate-100 dark:bg-slate-800 text-slate-500 dark:text-slate-400 group-hover:bg-white dark:group-hover:bg-slate-700 group-hover:text-primary transition-colors")">
                                    <span class="font-bold text-xs">@sec.CourseCode</span>
                                </div>
                                @if (sec.IsSelected)
                                {
                                    <div class="flex size-6 items-center justify-center rounded-full bg-primary text-white">
                                        <span class="material-symbols-outlined text-[14px]">check</span>
                                    </div>
                                }
                            </div>
                            <div>
                                <p class="@(sec.IsSelected ? "font-bold text-slate-900 dark:text-white" : "font-bold text-slate-900 dark:text-white group-hover:text-primary transition-colors")">@sec.CourseName</p>
                                <p class="text-xs font-medium text-slate-500 dark:text-slate-400 mt-0.5">@sec.CourseCode - Sĩ số: @sec.StudentCount</p>
                            </div>
                        </a>
                    }
                </div>
            </div>

            @* Header *@
            <div class="flex flex-col gap-1">
                <div class="flex items-end justify-between">
                    <div>
                        <h1 class="text-2xl font-black tracking-tight text-slate-900 dark:text-white md:text-3xl">Gửi Thông báo &amp; Cảnh báo</h1>
                        <p class="text-base text-slate-500 dark:text-slate-400 mt-1">
                            Quản lý và gửi thông báo đến sinh viên lớp @Model.CourseCode - @Model.CourseName
                        </p>
                    </div>
                    <div class="hidden sm:block">
                        <span class="inline-flex items-center gap-1.5 rounded-full bg-blue-50 dark:bg-blue-900/20 px-3 py-1 text-xs font-bold text-blue-700 dark:text-blue-300 ring-1 ring-inset ring-blue-700/10">
                            <span class="size-1. 5 rounded-full bg-blue-600"></span>
                            @Model.TermName
                        </span>
                    </div>
                </div>
            </div>

            @* Form gửi broadcast *@
            <div class="rounded-2xl border border-slate-100 dark:border-slate-800 bg-white dark:bg-slate-900 p-6 shadow-sm">
                <div class="flex items-center gap-3 mb-4">
                    <div class="flex size-10 items-center justify-center rounded-xl bg-primary/10 text-primary">
                        <span class="material-symbols-outlined">campaign</span>
                    </div>
                    <div>
                        <h3 class="text-lg font-bold text-slate-900 dark:text-white">Thông báo chung</h3>
                        <p class="text-xs text-slate-500">Gửi tin nhắn đến toàn bộ @Model.StudentCount thành viên lớp học</p>
                    </div>
                </div>

                <form asp-action="SendBroadcast" method="post" class="space-y-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="SectionId" />

                    <div>
                        <input asp-for="BroadcastTitle"
                               class="w-full rounded-xl border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 p-3 text-sm focus:border-primary focus:ring-primary dark:text-white transition-shadow"
                               placeholder="Tiêu đề thông báo..." />
                    </div>

                    <div>
                        <textarea asp-for="BroadcastContent"
                                  class="w-full rounded-xl border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 p-4 text-sm focus:border-primary focus:ring-primary dark:text-white transition-shadow"
                                  placeholder="Nhập nội dung thông báo chung gửi đến tất cả @Model.StudentCount sinh viên trong lớp..."
                                  rows="3"></textarea>
                    </div>

                    <div class="flex justify-between items-center">
                        <div class="flex items-center gap-2 text-xs text-slate-500">
                            <span class="material-symbols-outlined text-[16px]">info</span>
                            Thông báo sẽ được gửi qua hệ thống nội bộ.
                        </div>
                        <button type="submit" class="flex items-center gap-2 rounded-lg bg-primary px-5 py-2. 5 text-sm font-bold text-white hover:bg-blue-600 shadow-lg shadow-primary/20 transition-all hover:-translate-y-0.5">
                            <span class="material-symbols-outlined text-[18px]">send</span>
                            Gửi cho tất cả
                        </button>
                    </div>
                </form>
            </div>

            @* Danh sách sinh viên *@
            <div class="flex flex-col gap-4">
                <div class="rounded-2xl border border-slate-100 dark:border-slate-800 bg-white dark:bg-slate-900 shadow-sm overflow-hidden flex flex-col h-full">
                    <div class="border-b border-slate-100 dark:border-slate-800 px-6 py-4 flex flex-col sm:flex-row sm:items-center justify-between gap-4 bg-slate-50/30 dark:bg-slate-800/20">
                        <div class="flex items-center gap-2">
                            <h3 class="text-lg font-bold text-slate-900 dark:text-white">Danh sách sinh viên</h3>
                            <span class="rounded-full bg-slate-100 dark:bg-slate-800 px-2. 5 py-0.5 text-xs font-bold text-slate-600 dark:text-slate-300">@Model.StudentCount</span>
                        </div>
                    </div>

                    <div class="overflow-x-auto">
                        <table class="w-full text-left text-sm text-slate-600 dark:text-slate-400">
                            <thead class="bg-slate-50 dark:bg-slate-800/50 text-xs uppercase font-semibold text-slate-500 dark:text-slate-400">
                                <tr>
                                    <th class="px-6 py-4 min-w-[250px]">Thông tin sinh viên</th>
                                    <th class="px-6 py-4 w-[180px]">Tình trạng học tập</th>
                                    <th class="px-6 py-4 min-w-[400px]">Gửi cảnh báo riêng</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-slate-100 dark:divide-slate-800">
                                @foreach (var s in Model.Students)
                                {
                                    <tr class="group hover:bg-slate-50 dark:hover:bg-slate-800/30 transition-colors">
                                        <td class="px-6 py-4 align-top">
                                            <div class="flex items-center gap-3">
                                                <div class="relative">

                                                    <div class="flex size-10 items-center justify-center rounded-full bg-slate-100 dark:bg-slate-800 text-slate-400 border border-slate-200 dark:border-slate-700">
                                                        <span class="material-symbols-outlined text-lg">person</span>
                                                    </div>

                                                    <div class="absolute-bottom-1-right-1 flex size-4 items-center justify-center rounded-full @s.StatusColorClass ring-2 ring-white dark:ring-slate-900"></div>
                                                </div>
                                                <div>
                                                    <p class="font-bold text-slate-900 dark:text-white group-hover:text-primary transition-colors">@s.FullName</p>
                                                    <p class="text-xs text-slate-500">MSSV: @s.StudentCode</p>
                                                </div>
                                            </div>
                                        </td>

                                        <td class="px-6 py-4 align-top">
                                            <div class="flex flex-col gap-1">
                                                <span class="inline-flex w-fit items-center gap-1 rounded-full px-2 py-1 text-xs font-bold border @s.StatusBadgeClass">
                                                    <span class="material-symbols-outlined text-[14px]">@s.StatusIcon</span>
                                                    @s.StatusLabel
                                                </span>
                                                @if (!string.IsNullOrEmpty(s.StatusDetail))
                                                {
                                                    <span class="text-xs text-slate-400">@s.StatusDetail</span>
                                                }
                                            </div>
                                        </td>

                                        <td class="px-6 py-4 align-top">
                                            <form asp-action="SendPrivate" method="post" class="space-y-2">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="sectionId" value="@Model.SectionId" />
                                                <input type="hidden" name="studentId" value="@s.StudentId" />

                                                <input name="title"
                                                       class="w-full rounded-lg border-slate-200 dark: border-slate-700 bg-white dark:bg-slate-900 px-3 py-2 text-xs focus:border-primary focus:ring-primary dark:text-white transition-all focus:shadow-sm"
                                                       placeholder="Tiêu đề..." />

                                                <div class="flex gap-2">
                                                    <textarea name="content"
                                                          class="flex-1 w-full rounded-lg border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900 px-3 py-2 text-xs focus:border-primary focus:ring-primary dark:text-white resize-none transition-all focus:shadow-sm"
                                                          placeholder="Nhập lời nhắn riêng cho @s.FullName..."
                                                          rows="2"></textarea>

                                                    <button type="submit" class="self-end inline-flex items-center justify-center gap-2 rounded-lg bg-white dark:bg-slate-800 border border-slate-200 dark: border-slate-700 p-2 text-primary hover:bg-primary hover:text-white hover:border-primary transition-all shadow-sm">
                                                        <span class="material-symbols-outlined text-[20px]">send</span>
                                                    </button>
                                                </div>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @* Pagination *@
                    <div class="mt-auto border-t border-slate-100 dark:border-slate-800 p-4 flex items-center justify-between bg-white dark:bg-slate-900">
                        <p class="text-xs text-slate-500 dark:text-slate-400">
                            Hiển thị
                            <span class="font-bold text-slate-900 dark:text-white">@((Model.CurrentPage - 1) * Model.PageSize + 1)-@(Math.Min(Model.CurrentPage * Model.PageSize, Model.StudentCount))</span>
                            trong số
                            <span class="font-bold text-slate-900 dark:text-white">@Model.StudentCount</span> sinh viên
                        </p>
                        <div class="flex gap-2">
                            <a asp-action="ThongBao" asp-route-sectionId="@Model.SectionId" asp-route-page="@(Model.CurrentPage - 1)"
                               class="rounded-lg border border-slate-200 dark:border-slate-700 px-3 py-1. 5 text-xs font-bold text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800 hover:text-slate-900 dark:hover:text-white transition-colors @(Model.CurrentPage <= 1 ? "opacity-50 pointer-events-none" : "")">
                                Trước
                            </a>
                            <a asp-action="ThongBao" asp-route-sectionId="@Model. SectionId" asp-route-page="@(Model.CurrentPage + 1)"
                               class="rounded-lg border border-slate-200 dark:border-slate-700 px-3 py-1.5 text-xs font-bold text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800 hover:text-slate-900 dark:hover:text-white transition-colors @(Model.CurrentPage >= Model.TotalPages ? "opacity-50 pointer-events-none" : "")">
                                Sau
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>