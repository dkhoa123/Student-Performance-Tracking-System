@model SPTS_Service.ViewModel.GiangvienVm.GiangVien

@{
    Layout = "~/Views/Shared/_LayoutGiangvien.cshtml";
}

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "OPEN" => "bg-green-100 text-green-800 dark:bg-green-900/40 dark:text-green-400",
            "UPCOMING" => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300",
            "FINISHED" => "bg-gray-200 text-gray-800 dark:bg-gray-700 dark:text-gray-300",
            _ => "bg-gray-100 text-gray-800"
        };
    }

    string GetStatusText(string status)
    {
        return status switch
        {
            "OPEN" => "Đang diễn ra",
            "UPCOMING" => "Sắp bắt đầu",
            "FINISHED" => "Đã kết thúc",
            _ => "Không xác định"
        };
    }

    string GetColorClass(string colorClass)
    {
        return colorClass switch
        {
            "purple" => "bg-purple-500",
            "orange" => "bg-orange-500",
            "blue" => "bg-primary",
            "green" => "bg-green-500",
            "pink" => "bg-pink-500",
            _ => "bg-gray-400"
        };
    }
}

<main class="flex-1 flex flex-col h-full overflow-y-auto bg-background-light dark:bg-background-dark relative">
    <div class="w-full max-w-[1200px] mx-auto p-4 md:p-8 flex flex-col gap-6 md:gap-8 pb-20">

        <!-- Page Heading -->
        <div class="flex flex-col md:flex-row md:items-end justify-between gap-4">
            <div class="flex flex-col gap-2">
                <h1 class="text-[#111418] dark:text-white text-3xl md:text-4xl font-black leading-tight tracking-tight">Danh sách Lớp/Môn</h1>
                <p class="text-[#617589] dark:text-gray-400 text-base font-normal leading-normal max-w-2xl">
                    Quản lý tiến độ giảng dạy và theo dõi hiệu suất học tập của sinh viên trong các lớp học bạn phụ trách.
                </p>
            </div>
            <div class="flex items-center gap-2">
                <button class="flex items-center gap-2 bg-white dark:bg-[#1a2632] border border-[#dbe0e6] dark:border-gray-700 text-[#111418] dark:text-white px-4 py-2 rounded-lg font-medium text-sm hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors shadow-sm">
                    <span class="material-symbols-outlined text-[20px]">file_download</span>
                    Xuất Excel
                </button>
            </div>
        </div>

        <!-- Stats Summary -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <div class="flex flex-col gap-1 rounded-xl bg-white dark:bg-[#1a2632] p-6 shadow-sm border border-[#dbe0e6] dark:border-gray-700 hover:border-primary/50 transition-colors">
                <div class="flex items-center gap-2 mb-2">
                    <div class="p-2 rounded-lg bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400">
                        <span class="material-symbols-outlined">class</span>
                    </div>
                    <p class="text-[#617589] dark:text-gray-400 text-sm font-semibold uppercase tracking-wide">Lớp đang hoạt động</p>
                </div>
                <div class="flex items-baseline gap-2">
                    <p class="text-[#111418] dark:text-white text-3xl font-bold leading-tight">@Model.ActiveSectionsCount</p>
                    <span class="text-xs font-medium px-2 py-0.5 rounded-full bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400">Active</span>
                </div>
            </div>
            <div class="flex flex-col gap-1 rounded-xl bg-white dark:bg-[#1a2632] p-6 shadow-sm border border-[#dbe0e6] dark:border-gray-700 hover:border-primary/50 transition-colors">
                <div class="flex items-center gap-2 mb-2">
                    <div class="p-2 rounded-lg bg-orange-50 dark:bg-orange-900/20 text-orange-600 dark:text-orange-400">
                        <span class="material-symbols-outlined">groups</span>
                    </div>
                    <p class="text-[#617589] dark:text-gray-400 text-sm font-semibold uppercase tracking-wide">Tổng số sinh viên</p>
                </div>
                <div class="flex items-baseline gap-2">
                    <p class="text-[#111418] dark:text-white text-3xl font-bold leading-tight">@Model.TotalStudents</p>
                </div>
            </div>
            <div class="flex flex-col gap-1 rounded-xl bg-white dark:bg-[#1a2632] p-6 shadow-sm border border-[#dbe0e6] dark:border-gray-700 hover:border-primary/50 transition-colors">
                <div class="flex items-center gap-2 mb-2">
                    <div class="p-2 rounded-lg bg-purple-50 dark:bg-purple-900/20 text-purple-600 dark:text-purple-400">
                        <span class="material-symbols-outlined">analytics</span>
                    </div>
                    <p class="text-[#617589] dark:text-gray-400 text-sm font-semibold uppercase tracking-wide">Điểm TB Chung</p>
                </div>
                <div class="flex items-baseline gap-2">
                    <p class="text-[#111418] dark:text-white text-3xl font-bold leading-tight">@Model.AverageScore.ToString("F1")</p>
                </div>
            </div>
        </div>

        <!-- Filters & Search Toolbar -->
<div class="flex flex-col lg:flex-row gap-4 justify-between items-start lg:items-center bg-white dark:bg-[#1a2632] p-4 rounded-xl border border-[#dbe0e6] dark:border-gray-700 shadow-sm sticky top-0 z-10">
    <div class="flex flex-1 w-full lg:w-auto items-center gap-2">
        <div class="relative flex-1 max-w-md">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <span class="material-symbols-outlined text-[#617589]">search</span>
            </div>
            <input class="block w-full pl-10 pr-3 py-2.5 border border-[#dbe0e6] dark:border-gray-600 rounded-lg leading-5 bg-[#f6f7f8] dark:bg-gray-800 text-[#111418] dark:text-white placeholder-[#617589] focus:outline-none focus:ring-1 focus:ring-primary focus:border-primary sm:text-sm transition-all" 
                   placeholder="Tìm kiếm môn học, mã lớp..." 
                   type="text" />
        </div>
    </div>
    <div class="flex flex-wrap items-center gap-3 w-full lg:w-auto">
        <div class="relative min-w-[160px] flex-1 lg:flex-none">
            <!-- ✅ Thêm id và onchange event -->
                    <select id="termSelector"
                            class="block w-full pl-3 pr-10 py-2.5 text-base border-none focus:outline-none focus:ring-0 sm:text-sm rounded-lg bg-[#f6f7f8] dark:bg-gray-800 text-[#111418] dark:text-white cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors appearance-none">
                        @foreach (var term in Model.AvailableTerms)
                        {
                            @if (term.IsSelected)
                            {
                                <option value="@term.TermId" selected>@term.TermName</option>
                            }
                            else
                            {
                                <option value="@term.TermId">@term.TermName</option>
                            }
                        }
                    </select>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-[#617589]">
                <span class="material-symbols-outlined text-[20px]">expand_more</span>
            </div>
        </div>
    </div>
</div>

        <!-- Loop qua từng học kỳ -->
        @foreach (var term in Model.SectionsByTerm)
        {
            <div class="flex flex-col gap-4">
                <div class="flex items-center gap-3">
                    <h2 class="text-[#111418] dark:text-white text-xl font-bold">@term.TermName</h2>
                    <div class="h-px bg-[#dbe0e6] dark:bg-gray-700 flex-1"></div>
                </div>

                <!-- Cards Grid -->
                <div class="grid grid-cols-1 md: grid-cols-2 xl: grid-cols-3 gap-6">
                    @foreach (var sec in term.Sections)
                    {
                        <article class="flex flex-col bg-white dark:bg-[#1a2632] rounded-xl border border-[#dbe0e6] dark:border-gray-700 overflow-hidden hover:shadow-lg transition-shadow duration-300 group">
                            <!-- Header with decorative top border -->
                            <div class="h-1.5 w-full @GetColorClass(sec.ColorClass)"></div>
                            <div class="p-5 flex flex-col h-full gap-4">
                                <div class="flex justify-between items-start">
                                    <div class="flex flex-col gap-1">
                                        <div class="flex items-center gap-2">
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @GetStatusBadgeClass(sec.Status)">
                                                @GetStatusText(sec.Status)
                                            </span>
                                            <span class="text-xs text-[#617589] dark:text-gray-400 font-medium">TC: @sec.Credits</span>
                                        </div>
                                        <h3 class="text-lg font-bold text-[#111418] dark:text-white group-hover:text-primary transition-colors cursor-pointer">@sec.CourseName</h3>
                                        <p class="text-sm font-medium text-[#617589] dark:text-gray-400">@sec.CourseCode</p>
                                    </div>
                                    <button class="text-[#617589] hover:text-[#111418] dark:text-gray-400 dark:hover:text-white transition-colors">
                                        <span class="material-symbols-outlined">more_vert</span>
                                    </button>
                                </div>

                                <!-- Metrics -->
                                <div class="grid grid-cols-2 gap-3 py-3 border-t border-b border-[#f0f2f4] dark:border-gray-700/50">
                                    <div class="flex items-center gap-2">
                                        <span class="material-symbols-outlined text-[#617589] text-[20px]">group</span>
                                        <div class="flex flex-col">
                                            <span class="text-xs text-[#617589] dark:text-gray-400">Sĩ số</span>
                                            <span class="text-sm font-semibold text-[#111418] dark:text-white">@sec.StudentCount SV</span>
                                        </div>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <span class="material-symbols-outlined text-[#617589] text-[20px]">location_on</span>
                                        <div class="flex flex-col">
                                            <span class="text-xs text-[#617589] dark:text-gray-400">Phòng</span>
                                            <span class="text-sm font-semibold text-[#111418] dark:text-white">@sec.Room</span>
                                        </div>
                                    </div>
                                    <div class="flex items-center gap-2 col-span-2">
                                        <span class="material-symbols-outlined text-[#617589] text-[20px]">schedule</span>
                                        <div class="flex flex-col">
                                            <span class="text-xs text-[#617589] dark:text-gray-400">Thời gian</span>
                                            <span class="text-sm font-semibold text-[#111418] dark:text-white">
                                                @if (!string.IsNullOrEmpty(sec.Schedule) && !string.IsNullOrEmpty(sec.TimeSlot))
                                                {
                                                    @($"{sec.Schedule.Split(';').FirstOrDefault()} ({sec.TimeSlot})")
                                                }
                                                else
                                                {
                                                    <text>Chưa có lịch</text>
                                                }
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Progress/Status -->
                                @if (sec.Status == "OPEN")
                                {
                                    <div class="flex flex-col gap-2 mt-auto">
                                        <div class="flex justify-between items-center text-sm">
                                            <span class="text-[#617589] dark:text-gray-400">Tiến độ nhập điểm</span>
                                            <span class="font-medium text-primary">@sec.CompletionRate.ToString("F0")%</span>
                                        </div>
                                        <div class="w-full bg-[#f0f2f4] dark:bg-gray-700 rounded-full h-2">
                                            <div class="bg-primary h-2 rounded-full" style="width: @sec.CompletionRate%"></div>
                                        </div>

                                        @if (sec.AverageScore.HasValue)
                                        {
                                            var avgScore = sec.AverageScore.Value;
                                            var isLowScore = avgScore < 5.0m;

                                            <div class="mt-2 flex items-center justify-between p-2 rounded @(isLowScore ? "bg-red-50 dark:bg-red-900/10 border border-red-100 dark:border-red-900/30" : "bg-background-light dark:bg-gray-800/50 border border-transparent dark:border-gray-700/50")">
                                                @if (isLowScore)
                                                {
                                                    <span class="text-xs font-medium text-red-600 dark:text-red-400 flex items-center gap-1">
                                                        <span class="material-symbols-outlined text-[14px]">warning</span> Cần chú ý
                                                    </span>
                                                    <span class="text-sm font-bold text-red-700 dark:text-red-400">@avgScore.ToString("F1")/10</span>
                                                }
                                                else
                                                {
                                                    <span class="text-xs font-medium text-[#617589] dark:text-gray-400">Điểm TB Lớp</span>
                                                    <span class="text-sm font-bold text-[#111418] dark:text-white">@avgScore.ToString("F1")/10</span>
                                                }
                                            </div>
                                        }
                                    </div>

                                    <a asp-controller="Giangvien"
                                       asp-action="ChitietLop"
                                       asp-route-id="@sec.SectionId"
                                       class="mt-2 w-full flex items-center justify-center gap-2 bg-primary hover:bg-blue-600 text-white font-medium py-2.5 rounded-lg transition-colors">
                                        <span>Xem chi tiết</span>
                                        <span class="material-symbols-outlined text-[18px]">arrow_forward</span>
                                    </a>
                                }
                                else if (sec.Status == "UPCOMING")
                                {
                                    <div class="flex flex-col gap-2 mt-auto">
                                        <div class="mt-2 flex items-center justify-between p-2 rounded bg-background-light dark:bg-gray-800/50 border border-transparent dark:border-gray-700/50">
                                            <span class="text-xs font-medium text-[#617589] dark:text-gray-400">Trạng thái</span>
                                            <span class="text-sm font-bold text-[#617589] dark:text-gray-400">Chưa có dữ liệu</span>
                                        </div>
                                    </div>
                                    <button class="mt-2 w-full flex items-center justify-center gap-2 bg-white border border-[#dbe0e6] text-[#617589] hover:bg-gray-50 dark:bg-transparent dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-800 font-medium py-2.5 rounded-lg transition-colors">
                                        <span>Chuẩn bị bài giảng</span>
                                    </button>
                                }
                                else
                                {
                                    <!-- FINISHED -->
                                    @if (sec.AverageScore.HasValue)
                                    {
                                        <div class="flex items-center gap-4 py-2 border-t border-b border-[#f0f2f4] dark:border-gray-800">
                                            <div class="flex flex-col">
                                                <span class="text-xs text-[#617589] dark:text-gray-400">Tổng kết</span>
                                                <span class="text-sm font-bold text-[#111418] dark:text-white">@sec.AverageScore.Value.ToString("F1")/10</span>
                                            </div>
                                            <div class="h-8 w-px bg-[#dbe0e6] dark:bg-gray-700"></div>
                                            <div class="flex flex-col">
                                                <span class="text-xs text-[#617589] dark:text-gray-400">Đã nhập điểm</span>
                                                <span class="text-sm font-bold text-green-600">@sec.CompletionRate.ToString("F0")%</span>
                                            </div>
                                        </div>
                                    }
                                    <button class="mt-auto w-full flex items-center justify-center gap-2 bg-transparent text-[#617589] hover:text-primary dark:text-gray-400 dark:hover:text-white font-medium py-2 rounded-lg transition-colors border border-transparent hover:bg-gray-100 dark:hover:bg-gray-800">
                                        <a asp-controller="Giangvien"
                                           asp-action="ChitietLop"
                                           asp-route-id="@sec.SectionId">
                                            <span>Xem lại báo cáo</span>
                                        </a>
                                    </button>
                                }
                            </div>
                        </article>
                    }
                </div>
            </div>
        }

        @if (!Model.SectionsByTerm.Any())
        {
            <div class="flex flex-col items-center justify-center py-12 text-center">
                <span class="material-symbols-outlined text-6xl text-gray-400 mb-4">school</span>
                <h3 class="text-xl font-bold text-gray-600 dark:text-gray-400 mb-2">Chưa có lớp học nào</h3>
                <p class="text-gray-500 dark:text-gray-500">Bạn chưa được phân công giảng dạy lớp học nào trong học kỳ này.</p>
            </div>
        }

    </div>
</main>
@section Scripts {
    <script>
        document.getElementById('termSelector').addEventListener('change', function() {
            const selectedTermId = this.value;
            // ✅ Cách này an toàn hơn, tự động lấy đúng action/controller hiện tại
            const currentUrl = new URL(window.location.href);
            currentUrl.searchParams.set('termId', selectedTermId);
            window.location.href = currentUrl.toString();
        });
    </script>
}