@{
    Layout = "~/Views/Shared/_LayoutGiaovien.cshtml";
}
<body class="bg-background-light dark:bg-background-dark text-[#111418] dark:text-white font-display">
    <div class="relative flex h-auto min-h-screen w-full flex-col group/design-root overflow-x-hidden">
        <!-- Main Content Wrapper -->
        <main class="flex-1 flex flex-col items-center py-6 px-4 md:px-10">
            <div class="w-full max-w-[1200px] flex flex-col gap-6">
                <!-- Page Header -->
                <div class="flex flex-col md:flex-row justify-between items-start md:items-end gap-4">
                    <div class="flex flex-col gap-1">
                        <h1 class="text-[#111418] dark:text-white text-3xl font-black leading-tight tracking-[-0.033em]">Nhập điểm</h1>
                        <p class="text-[#617589] dark:text-[#9ca3af] text-base">Quản lý điểm số</p>
                    </div>
                    <div class="flex gap-3">
                        <button class="flex items-center gap-2 px-4 py-2 bg-white dark:bg-[#1a202c] border border-[#dbe0e6] dark:border-[#374151] rounded-lg text-[#111418] dark:text-white font-bold text-sm hover:bg-[#f3f4f6] dark:hover:bg-[#2d3748] transition-colors shadow-sm">
                            <span class="material-symbols-outlined text-lg">download</span>
                            Xuất Excel
                        </button>
                        <button class="flex items-center gap-2 px-4 py-2 bg-white dark:bg-[#1a202c] border border-[#dbe0e6] dark:border-[#374151] rounded-lg text-[#111418] dark:text-white font-bold text-sm hover:bg-[#f3f4f6] dark:hover:bg-[#2d3748] transition-colors shadow-sm">
                            <span class="material-symbols-outlined text-lg">upload</span>
                            Nhập Excel
                        </button>
                    </div>
                </div>
                <!-- Context Filters -->
                <section class="bg-white dark:bg-[#1a202c] p-5 rounded-xl border border-[#dbe0e6] dark:border-[#374151] shadow-sm">
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                        <label class="flex flex-col gap-1.5">
                            <span class="text-sm font-semibold text-[#111418] dark:text-[#e5e7eb]">Năm học / Học kỳ</span>
                            <div class="relative">
                                <select class="w-full appearance-none bg-[#f9fafb] dark:bg-[#2d3748] border border-[#dbe0e6] dark:border-[#4b5563] text-[#111418] dark:text-white text-sm rounded-lg block p-2.5 pr-8 focus:ring-primary focus:border-primary transition-colors cursor-pointer">
                                    <option>2023-2024 - Học kỳ 1</option>
                                    <option>2023-2024 - Học kỳ 2</option>
                                </select>
                                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-[#617589]">
                                    <span class="material-symbols-outlined">expand_more</span>
                                </div>
                            </div>
                        </label>
                        <label class="flex flex-col gap-1.5">
                            <span class="text-sm font-semibold text-[#111418] dark:text-[#e5e7eb]">Lớp học</span>
                            <div class="relative">
                                <select class="w-full appearance-none bg-[#f9fafb] dark:bg-[#2d3748] border border-[#dbe0e6] dark:border-[#4b5563] text-[#111418] dark:text-white text-sm rounded-lg block p-2.5 pr-8 focus:ring-primary focus:border-primary transition-colors cursor-pointer">
                                    <option selected="">Lớp 10A1</option>
                                    <option>Lớp 10A2</option>
                                    <option>Lớp 11B1</option>
                                </select>
                                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-[#617589]">
                                    <span class="material-symbols-outlined">expand_more</span>
                                </div>
                            </div>
                        </label>
                        <label class="flex flex-col gap-1.5">
                            <span class="text-sm font-semibold text-[#111418] dark:text-[#e5e7eb]">Môn học</span>
                            <div class="relative">
                                <select class="w-full appearance-none bg-[#f9fafb] dark:bg-[#2d3748] border border-[#dbe0e6] dark:border-[#4b5563] text-[#111418] dark:text-white text-sm rounded-lg block p-2.5 pr-8 focus:ring-primary focus:border-primary transition-colors cursor-pointer">
                                    <option selected="">Toán học</option>
                                    <option>Vật lý</option>
                                    <option>Hóa học</option>
                                </select>
                                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-[#617589]">
                                    <span class="material-symbols-outlined">expand_more</span>
                                </div>
                            </div>
                        </label>
                        <label class="flex flex-col gap-1.5">
                            <span class="text-sm font-semibold text-[#111418] dark:text-[#e5e7eb]">Loại điểm</span>
                            <div class="relative">
                                <select class="w-full appearance-none bg-[#f9fafb] dark:bg-[#2d3748] border border-[#dbe0e6] dark:border-[#4b5563] text-[#111418] dark:text-white text-sm rounded-lg block p-2.5 pr-8 focus:ring-primary focus:border-primary transition-colors cursor-pointer">
                                    <option>Kiểm tra miệng</option>
                                    <option>Kiểm tra 15 phút</option>
                                    <option selected="">Kiểm tra 1 tiết</option>
                                    <option>Thi học kỳ</option>
                                </select>
                                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-[#617589]">
                                    <span class="material-symbols-outlined">expand_more</span>
                                </div>
                            </div>
                        </label>
                    </div>
                </section>
                <!-- Stats Overview -->
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                    <div class="bg-white dark:bg-[#1a202c] p-4 rounded-xl border border-[#dbe0e6] dark:border-[#374151] flex items-center gap-4 shadow-sm">
                        <div class="p-3 bg-blue-50 dark:bg-blue-900/20 rounded-lg text-primary">
                            <span class="material-symbols-outlined">group</span>
                        </div>
                        <div>
                            <p class="text-sm text-[#617589] dark:text-[#9ca3af] font-medium">Tổng sinh viên</p>
                            <p class="text-2xl font-bold text-[#111418] dark:text-white">45</p>
                        </div>
                    </div>
                    <div class="bg-white dark:bg-[#1a202c] p-4 rounded-xl border border-[#dbe0e6] dark:border-[#374151] flex items-center gap-4 shadow-sm">
                        <div class="p-3 bg-green-50 dark:bg-green-900/20 rounded-lg text-green-600">
                            <span class="material-symbols-outlined">check_circle</span>
                        </div>
                        <div>
                            <p class="text-sm text-[#617589] dark:text-[#9ca3af] font-medium">Đã nhập điểm</p>
                            <p class="text-2xl font-bold text-[#111418] dark:text-white">40/45</p>
                        </div>
                    </div>
                    <div class="bg-white dark:bg-[#1a202c] p-4 rounded-xl border border-[#dbe0e6] dark:border-[#374151] flex items-center gap-4 shadow-sm">
                        <div class="p-3 bg-purple-50 dark:bg-purple-900/20 rounded-lg text-purple-600">
                            <span class="material-symbols-outlined">analytics</span>
                        </div>
                        <div>
                            <p class="text-sm text-[#617589] dark:text-[#9ca3af] font-medium">Điểm trung bình</p>
                            <p class="text-2xl font-bold text-[#111418] dark:text-white">7.5</p>
                        </div>
                    </div>
                </div>
                <!-- Main Grade Table -->
                <section class="bg-white dark:bg-[#1a202c] rounded-xl border border-[#dbe0e6] dark:border-[#374151] shadow-sm overflow-hidden flex-1 flex flex-col">
                    <div class="overflow-x-auto">
                        <table class="w-full text-left border-collapse">
                            <thead>
                                <tr class="bg-[#f9fafb] dark:bg-[#2d3748] border-b border-[#dbe0e6] dark:border-[#374151]">
                                    <th class="p-4 text-xs font-bold text-[#617589] dark:text-[#9ca3af] uppercase tracking-wider w-16 text-center">STT</th>
                                    <th class="p-4 text-xs font-bold text-[#617589] dark:text-[#9ca3af] uppercase tracking-wider w-32">Mã SV</th>
                                    <th class="p-4 text-xs font-bold text-[#617589] dark:text-[#9ca3af] uppercase tracking-wider min-w-[200px]">Họ và tên</th>
                                    <th class="p-4 text-xs font-bold text-[#617589] dark:text-[#9ca3af] uppercase tracking-wider w-32 text-center">Điểm số</th>
                                    <th class="p-4 text-xs font-bold text-[#617589] dark:text-[#9ca3af] uppercase tracking-wider min-w-[200px]">Ghi chú</th>
                                    <th class="p-4 text-xs font-bold text-[#617589] dark:text-[#9ca3af] uppercase tracking-wider w-24 text-center">Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-[#dbe0e6] dark:divide-[#374151]">
                                <!-- Row 1: Filled -->
                                <tr class="hover:bg-gray-50 dark:hover:bg-[#2a3441] transition-colors group">
                                    <td class="p-4 text-sm text-center text-[#617589]">01</td>
                                    <td class="p-4 text-sm font-medium text-[#111418] dark:text-white">HS00123</td>
                                    <td class="p-4 text-sm font-bold text-[#111418] dark:text-white">Nguyễn Thị Mai Anh</td>
                                    <td class="p-4 text-center">
                                        <input class="w-20 text-center font-bold text-[#111418] dark:text-white bg-white dark:bg-[#1a202c] border border-[#dbe0e6] dark:border-[#4b5563] rounded p-2 focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all" max="10" min="0" step="0.1" type="number" value="8.5" />
                                    </td>
                                    <td class="p-4">
                                        <input class="w-full text-sm text-[#111418] dark:text-white bg-transparent border-b border-transparent group-hover:border-[#dbe0e6] focus:border-primary focus:ring-0 px-2 py-1 outline-none transition-colors" placeholder="Thêm ghi chú..." type="text" />
                                    </td>
                                    <td class="p-4 text-center">
                                        <span class="inline-flex items-center gap-1 px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300">
                                            <span class="material-symbols-outlined text-[14px]">check</span>
                                            Đã lưu
                                        </span>
                                    </td>
                                </tr>
                                <!-- Row 2: Filled -->
                                <tr class="hover:bg-gray-50 dark:hover:bg-[#2a3441] transition-colors group">
                                    <td class="p-4 text-sm text-center text-[#617589]">02</td>
                                    <td class="p-4 text-sm font-medium text-[#111418] dark:text-white">HS00124</td>
                                    <td class="p-4 text-sm font-bold text-[#111418] dark:text-white">Trần Văn Bảo</td>
                                    <td class="p-4 text-center">
                                        <input class="w-20 text-center font-bold text-[#111418] dark:text-white bg-white dark:bg-[#1a202c] border border-[#dbe0e6] dark:border-[#4b5563] rounded p-2 focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all" max="10" min="0" step="0.1" type="number" value="6.0" />
                                    </td>
                                    <td class="p-4">
                                        <input class="w-full text-sm text-[#111418] dark:text-white bg-transparent border-b border-transparent group-hover:border-[#dbe0e6] focus:border-primary focus:ring-0 px-2 py-1 outline-none transition-colors" placeholder="Thêm ghi chú..." type="text" />
                                    </td>
                                    <td class="p-4 text-center">
                                        <span class="inline-flex items-center gap-1 px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300">
                                            <span class="material-symbols-outlined text-[14px]">check</span>
                                            Đã lưu
                                        </span>
                                    </td>
                                </tr>
                                <!-- Row 3: Active/Editing -->
                                <tr class="bg-primary/5 dark:bg-primary/10 hover:bg-primary/10 dark:hover:bg-primary/20 transition-colors group">
                                    <td class="p-4 text-sm text-center text-[#617589]">03</td>
                                    <td class="p-4 text-sm font-medium text-[#111418] dark:text-white">HS00125</td>
                                    <td class="p-4 text-sm font-bold text-[#111418] dark:text-white">Lê Hoàng Cường</td>
                                    <td class="p-4 text-center">
                                        <input class="w-20 text-center font-bold text-primary bg-white dark:bg-[#1a202c] border border-primary ring-2 ring-primary/20 rounded p-2 focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all shadow-sm" max="10" min="0" step="0.1" type="number" value="9.0" />
                                    </td>
                                    <td class="p-4">
                                        <input class="w-full text-sm text-[#111418] dark:text-white bg-transparent border-b border-[#dbe0e6] focus:border-primary focus:ring-0 px-2 py-1 outline-none transition-colors" placeholder="Thêm ghi chú..." type="text" value="Học sinh giỏi" />
                                    </td>
                                    <td class="p-4 text-center">
                                        <span class="inline-flex items-center gap-1 px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300">
                                            <span class="material-symbols-outlined text-[14px]">pending</span>
                                            Chờ lưu
                                        </span>
                                    </td>
                                </tr>
                                <!-- Row 4: Empty -->
                                <tr class="hover:bg-gray-50 dark:hover:bg-[#2a3441] transition-colors group">
                                    <td class="p-4 text-sm text-center text-[#617589]">04</td>
                                    <td class="p-4 text-sm font-medium text-[#111418] dark:text-white">HS00126</td>
                                    <td class="p-4 text-sm font-bold text-[#111418] dark:text-white">Phạm Thị Dung</td>
                                    <td class="p-4 text-center">
                                        <input class="w-20 text-center font-bold text-[#111418] dark:text-white bg-white dark:bg-[#1a202c] border border-[#dbe0e6] dark:border-[#4b5563] rounded p-2 focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all placeholder:font-normal" max="10" min="0" placeholder="--" step="0.1" type="number" />
                                    </td>
                                    <td class="p-4">
                                        <input class="w-full text-sm text-[#111418] dark:text-white bg-transparent border-b border-transparent group-hover:border-[#dbe0e6] focus:border-primary focus:ring-0 px-2 py-1 outline-none transition-colors" placeholder="Thêm ghi chú..." type="text" />
                                    </td>
                                    <td class="p-4 text-center">
                                        <span class="inline-flex items-center gap-1 px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700/50 dark:text-gray-300">
                                            Chưa nhập
                                        </span>
                                    </td>
                                </tr>
                                <!-- Row 5: Error State Example -->
                                <tr class="bg-red-50 dark:bg-red-900/10 hover:bg-red-100 dark:hover:bg-red-900/20 transition-colors group">
                                    <td class="p-4 text-sm text-center text-[#617589]">05</td>
                                    <td class="p-4 text-sm font-medium text-[#111418] dark:text-white">HS00127</td>
                                    <td class="p-4 text-sm font-bold text-[#111418] dark:text-white">Hoàng Văn Em</td>
                                    <td class="p-4 text-center relative">
                                        <input class="w-20 text-center font-bold text-red-600 bg-white dark:bg-[#1a202c] border border-red-500 rounded p-2 focus:ring-2 focus:ring-red-500 focus:border-transparent outline-none transition-all" max="10" min="0" step="0.1" type="number" value="11" />
                                        <span class="absolute -bottom-1 left-1/2 transform -translate-x-1/2 text-[10px] text-red-600 font-medium whitespace-nowrap">0-10</span>
                                    </td>
                                    <td class="p-4">
                                        <input class="w-full text-sm text-[#111418] dark:text-white bg-transparent border-b border-transparent group-hover:border-[#dbe0e6] focus:border-primary focus:ring-0 px-2 py-1 outline-none transition-colors" placeholder="Thêm ghi chú..." type="text" />
                                    </td>
                                    <td class="p-4 text-center">
                                        <span class="inline-flex items-center gap-1 px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300">
                                            <span class="material-symbols-outlined text-[14px]">error</span>
                                            Lỗi
                                        </span>
                                    </td>
                                </tr>
                                <!-- Row 6: Empty -->
                                <tr class="hover:bg-gray-50 dark:hover:bg-[#2a3441] transition-colors group">
                                    <td class="p-4 text-sm text-center text-[#617589]">06</td>
                                    <td class="p-4 text-sm font-medium text-[#111418] dark:text-white">HS00128</td>
                                    <td class="p-4 text-sm font-bold text-[#111418] dark:text-white">Đặng Thị Hoa</td>
                                    <td class="p-4 text-center">
                                        <input class="w-20 text-center font-bold text-[#111418] dark:text-white bg-white dark:bg-[#1a202c] border border-[#dbe0e6] dark:border-[#4b5563] rounded p-2 focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all placeholder:font-normal" max="10" min="0" placeholder="--" step="0.1" type="number" />
                                    </td>
                                    <td class="p-4">
                                        <input class="w-full text-sm text-[#111418] dark:text-white bg-transparent border-b border-transparent group-hover:border-[#dbe0e6] focus:border-primary focus:ring-0 px-2 py-1 outline-none transition-colors" placeholder="Thêm ghi chú..." type="text" />
                                    </td>
                                    <td class="p-4 text-center">
                                        <span class="inline-flex items-center gap-1 px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700/50 dark:text-gray-300">
                                            Chưa nhập
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- Pagination / Footer of table -->
                    <div class="p-4 bg-white dark:bg-[#1a202c] border-t border-[#dbe0e6] dark:border-[#374151] flex items-center justify-between">
                        <span class="text-sm text-[#617589] dark:text-[#9ca3af]">Hiển thị 1-6 trong số 45 học sinh</span>
                        <div class="flex gap-2">
                            <button class="px-3 py-1 text-sm border border-[#dbe0e6] dark:border-[#374151] rounded hover:bg-gray-50 dark:hover:bg-[#2d3748] disabled:opacity-50 text-[#111418] dark:text-white" disabled="">Trước</button>
                            <button class="px-3 py-1 text-sm border border-[#dbe0e6] dark:border-[#374151] rounded hover:bg-gray-50 dark:hover:bg-[#2d3748] text-[#111418] dark:text-white">Sau</button>
                        </div>
                    </div>
                </section>
                <!-- Floating/Sticky Action Bar -->
                <div class="sticky bottom-6 flex justify-between items-center bg-white dark:bg-[#1a202c] border border-[#dbe0e6] dark:border-[#374151] p-4 rounded-xl shadow-lg z-40 w-full animate-fade-in-up">
                    <div class="flex items-center gap-2 text-sm text-[#617589] dark:text-[#9ca3af]">
                        <span class="material-symbols-outlined text-base">info</span>
                        <span>Thay đổi chưa được lưu: 1</span>
                    </div>
                    <div class="flex gap-3">
                        <button class="px-5 py-2.5 text-sm font-bold text-[#617589] dark:text-white bg-transparent hover:bg-gray-100 dark:hover:bg-[#2d3748] rounded-lg transition-colors">
                            Hủy bỏ
                        </button>
                        <button class="px-6 py-2.5 text-sm font-bold text-white bg-primary hover:bg-blue-600 rounded-lg shadow-md transition-all flex items-center gap-2">
                            <span class="material-symbols-outlined text-[18px]">save</span>
                            Lưu điểm
                        </button>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>