<!DOCTYPE html>

<html class="light" lang="vi">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Dashboard Giáo viên - EduTrack</title>
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;600;700;900&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#137fec",
                        "background-light": "#f6f7f8",
                        "background-dark": "#101922",
                    },
                    fontFamily: {
                        "display": ["Lexend", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "2xl": "1rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
</head>
<body class="bg-background-light dark:bg-background-dark font-display text-slate-900 dark:text-slate-100 antialiased overflow-hidden">
    <div class="flex h-screen w-full overflow-hidden">
        <!-- Sidebar -->
        <aside class="flex w-72 flex-col gap-6 border-r border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-900 px-6 py-8 overflow-y-auto hidden md:flex shrink-0">
            <!-- Logo area -->
            <div class="flex items-center gap-3 px-2">
                <div class="size-10 bg-primary/10 rounded-xl flex items-center justify-center text-primary">
                    <span class="material-symbols-outlined text-[28px]">school</span>
                </div>
                <h2 class="text-2xl font-bold tracking-tight text-slate-900 dark:text-white">EduTrack</h2>
            </div>
            <!-- User Profile Card (Sidebar) -->
            <div class="flex items-center gap-4 rounded-xl border border-slate-100 dark:border-slate-800 bg-slate-50 dark:bg-slate-800/50 p-4 shadow-sm">
                <div class="size-12 rounded-full bg-cover bg-center shrink-0 border-2 border-white dark:border-slate-700 shadow-sm" data-alt="Portrait of a male teacher smiling warmly" style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuD1wtvA_Bs8rQR21DQaNqy1w8jmS0ar8y-ArwRSSIul6dhg40odsQWKCR4Sjz1Ae3DPwij1KBKUX4i-IANZXnN4Zb5Zob_vjW5s4BGa4hr53beeZnh4hWbDq0-Ye8n9HjbkRmf0CWWhT3-pCDVTRXgpKmCdN_0TSlgYKpd8HskTrwMifiohv1N0Gk0sUVOWNfvA8fYUeUG4mKX61LHgM3jMEe36AWDWWUwaKaUO3AYf5BpSX_0UhRxISgTO_dk3BQwDJM7k1ZVQOhs");'>
                </div>
                <div class="flex flex-col min-w-0">
                    <p class="truncate text-sm text-slate-500 dark:text-slate-400">Giảng Viên</p>
                </div>
            </div>
            <!-- Navigation -->
            <nav class="flex flex-col gap-2 flex-1">
                <a asp-controller="Giangvien" asp-action="Index"
                   class="group flex items-center gap-3 rounded-lg @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "bg-primary text-white shadow-md shadow-primary/20" : "text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 hover:text-slate-900 dark:hover:text-white") px-4 py-3 transition-all">
                    <span class="material-symbols-outlined">dashboard</span>
                    <span class="font-medium">Tổng quan</span>
                </a>

                <a asp-controller="Giangvien" asp-action="Lophoc"
                   class="group flex items-center gap-3 rounded-lg @(ViewContext.RouteData.Values["Action"]?.ToString() == "Lophoc" ? "bg-primary text-white shadow-md shadow-primary/20" : "text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 hover:text-slate-900 dark:hover:text-white") px-4 py-3 transition-colors">
                    <span class="material-symbols-outlined">class</span>
                    <span class="font-medium">Lớp học</span>
                </a>

                <a asp-controller="Giangvien" asp-action="ThongBao"
                   class="group flex items-center gap-3 rounded-lg @(ViewContext.RouteData.Values["Action"]?.ToString() == "ThongBao" ? "bg-primary text-white shadow-md shadow-primary/20" : "text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 hover:text-slate-900 dark:hover:text-white") px-4 py-3 transition-colors">
                    <span class="material-symbols-outlined">warning</span>
                    <span class="font-medium">Thông báo</span>
                </a>

                <a asp-controller="Giangvien" asp-action="CaNhanGV"
                   class="group flex items-center gap-3 rounded-lg @(ViewContext.RouteData.Values["Action"]?.ToString() == "CaNhanGV" ? "bg-primary text-white shadow-md shadow-primary/20" : "text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 hover:text-slate-900 dark:hover:text-white") px-4 py-3 transition-colors">
                    <span class="material-symbols-outlined">person</span>
                    <span class="font-medium">Cá Nhân</span>
                </a>
            </nav>
            <!-- Bottom Action -->
            <div class="mt-auto">
                <button type ="submit">
                    <a asp-controller="Home" asp-action="Login" method="post" class="flex w-full items-center justify-center gap-2 rounded-lg border border-slate-200 dark:border-slate-700 p-3 text-sm font-semibold text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">
                    <span class="material-symbols-outlined">logout</span>
                    Đăng xuất
                    </a>
                </button>
            </div>
        </aside>
@RenderBody()
    </div>
</body>
</html>