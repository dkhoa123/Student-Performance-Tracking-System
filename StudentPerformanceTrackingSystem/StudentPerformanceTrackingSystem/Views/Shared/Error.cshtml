@model StudentPerformanceTrackingSystem.Models.ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<h1>Error</h1>
<p>Đã xảy ra lỗi khi xử lý request.</p>

@if (!string.IsNullOrWhiteSpace(Model?.Message))
{
    <div style="background:#fee; border:1px solid #f99; padding:12px; margin:12px 0;">
        <strong>Message:</strong> @Model.Message
    </div>
}

@if (!string.IsNullOrWhiteSpace(Model?.Detail))
{
    <pre style="background:#f7f7f7; border:1px solid #ddd; padding:12px; overflow:auto;">
    @Model.Detail
        </pre>
}

@if (Model?.ShowRequestId == true)
{
    <p><strong>RequestId:</strong> <code>@Model.RequestId</code></p>
}