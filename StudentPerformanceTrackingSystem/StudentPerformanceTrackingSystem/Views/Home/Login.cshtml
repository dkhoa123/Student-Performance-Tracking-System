<body class="relative flex min-h-screen w-full flex-col bg-background-light dark:bg-background-dark font-display text-[#111418] dark:text-white overflow-x-hidden transition-colors duration-200">
    <!-- Header -->
    <header class="flex items-center justify-between whitespace-nowrap border-b border-solid border-[#e5e7eb] dark:border-gray-800 bg-white dark:bg-[#1a2632] px-6 py-4 lg:px-10">
        <div class="flex items-center gap-4 text-[#111418] dark:text-white">
            <div class="flex items-center justify-center rounded-lg bg-primary/10 p-2 text-primary">
                <span class="material-symbols-outlined text-[24px]">school</span>
            </div>
            <h2 class="text-lg font-bold leading-tight tracking-[-0.015em]">Hệ thống theo dõi hiệu suất</h2>
        </div>
        <div class="flex gap-3 hidden sm:flex">
            <button class="flex min-w-[84px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-10 px-4 bg-[#f0f2f4] dark:bg-gray-800 text-[#111418] dark:text-white hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors text-sm font-bold leading-normal tracking-[0.015em]">
                <span class="truncate">Trợ giúp</span>
            </button>
        </div>
    </header>
    <!-- Main Content Layout -->
    <main class="flex flex-1 flex-col items-center justify-center p-4 lg:p-10">
        <div class="grid w-full max-w-6xl grid-cols-1 gap-12 lg:grid-cols-2 lg:gap-16 items-center">
            <!-- Left Column: Introduction & Visual -->
            <div class="flex flex-col gap-8 order-2 lg:order-1">
                <div class="flex flex-col gap-4">
                    <h1 class="text-[#111418] dark:text-white tracking-tight text-3xl font-black leading-tight sm:text-4xl lg:text-5xl max-w-[600px]">
                        Chào mừng bạn quay trở lại
                    </h1>
                    <p class="text-[#617589] dark:text-gray-400 text-base sm:text-lg font-normal leading-relaxed max-w-[560px]">
                        Hệ thống giúp bạn theo dõi tiến độ học tập, quản lý điểm số và tối ưu hóa hiệu suất cá nhân một cách trực quan và hiệu quả.
                    </p>
                </div>
                <div class="w-full aspect-[4/3] rounded-2xl overflow-hidden shadow-lg border border-[#e5e7eb] dark:border-gray-800 bg-white dark:bg-[#1a2632]">
                    <div class="w-full h-full bg-cover bg-center" data-alt="Abstract 3d illustration of books, graduation cap and analytics charts floating in blue space" style="background-image: url('https://lh3.googleusercontent.com/aida-public/AB6AXuC4Hlk9ndGwafCDTwDCMJrpPuhSiJ7RRSxQTFYzrHrUQqWxI2BVqKnmDns5gOIuubu8bE_qeFZQv5o19y_uml03xtdWeqTnlhCKfIKTS90Pu5HQOgxDw1m3OyZ1hgBJFYQWMMhFSUJqkigrRT4HDGx_p_B8hG1y8ALziJnSs-nfKpM5ko9gtC3AfB2qb0nM4OuqkNyZgB9Tj6GiNB6uQdPmstpECMpCh9uec5qCnb5sfavkIT2IBaqT63RMrJDKRLZUrioKNGgDNPc');">
                        <!-- Gradient overlay for better text contrast if needed later -->
                        <div class="w-full h-full bg-gradient-to-t from-black/40 to-transparent"></div>
                    </div>
                </div>
                <div class="flex items-center gap-4 text-sm text-[#617589] dark:text-gray-400">
                    <div class="flex -space-x-2">
                        <img alt="Student avatar" class="inline-block size-8 rounded-full ring-2 ring-white dark:ring-[#1a2632] object-cover" data-alt="Portrait of a female student" src="https://lh3.googleusercontent.com/aida-public/AB6AXuDKgEEVGAoBFH-z--oSrt-gMBGHWPfpfJKDUvtzIF5NtxRcb2FUpOgcR3tmp7oU21t3-cfjJHSJGrWzRpmiY7p21Ko_PHD9-QTTEZFOU3nOc7oIkQH3Vxql5tgJlHWIo81DbHNvu8g5bZOlgFFifHZAHh6omovPYKeQUxQvzYID7om4SfGmrz7Mo7WoDzjnv-554MxcmymLlc2zYeaKhO4_J87FIXPuc7Mhrplvt6Kcf0BZo_otXY0Iomm8E6ddnsV7owpMhQBMAbQ" />
                        <img alt="Student avatar" class="inline-block size-8 rounded-full ring-2 ring-white dark:ring-[#1a2632] object-cover" data-alt="Portrait of a male student" src="https://lh3.googleusercontent.com/aida-public/AB6AXuDDAe0HS6rFrRDHG9eIY-g7AkqVhuAHuesuJVAYIrVXhrhQfU5DpLY_SLgyRD0WvbY-6LPQZPAMr7IoiP7q0sXrRQdrxzCGmrRWtqmPEO5OA1neM9aXAWKqWMDBLmBfIK3--AXInZn2gPOeNR804UjXxKmG9W9oPADJSQ2lx1aM2BXmuzKyeWB7IkjNzeNiR1q_BR1PdRng6d9gAuo0-CUy1yLql9ifFl2LSQrodfyaw_6ywEb49e44a0RMSzTSEBy3lyug4RHQ47I" />
                        <img alt="Student avatar" class="inline-block size-8 rounded-full ring-2 ring-white dark:ring-[#1a2632] object-cover" data-alt="Portrait of a male student" src="https://lh3.googleusercontent.com/aida-public/AB6AXuC8zEn_E-9FAEcPs6dwAtDEdH4JV8tFJ2LHSHop2MLztbyjqWOug3bczUDfXq56YecmpadyPIrRo20tmI_NNTKira9eBjNMCKaFLJIZX_uZFdQDyHFqc2oYXGyipmIBqpUIKdwO0GLjDVRrbgFYP5F6Ru0I-DYLgXwl4y-mw_Jb-YZnQ6NFACD8qNyqVQ4tJrJqcBXjM9Oy3F5zVcanOm6sqK56d-yUI1vPIz70Z04nB5lMVum1aoFkAMoQvB9WJY2tAXX83ZW1Yr4" />
                    </div>
                    <span>Hơn 5.000 sinh viên đang sử dụng hệ thống.</span>
                </div>
            </div>
            <!-- Right Column: Login Form -->
            <div class="flex flex-col order-1 lg:order-2">
                <div class="bg-white dark:bg-[#1a2632] rounded-2xl p-6 sm:p-10 shadow-xl border border-[#e5e7eb] dark:border-gray-800 w-full max-w-[520px] mx-auto">
                    <div class="mb-8 text-center sm:text-left">
                        <h2 class="text-[#111418] dark:text-white tracking-tight text-2xl font-bold leading-tight">Đăng nhập tài khoản</h2>
                        <p class="mt-2 text-[#617589] dark:text-gray-400 text-sm">Nhập thông tin xác thực của bạn để truy cập.</p>
                    </div>
                    <form asp-action="Login" asp-controller="Home" method="post" class="flex flex-col gap-6">
                        @Html.AntiForgeryToken()
                        <!-- Username Field -->
                        <div class="flex flex-col gap-2">
                            <label class="text-[#111418] dark:text-gray-200 text-sm font-medium leading-normal">
                                Email Sinh Viên
                            </label>
                            <div class="relative flex items-center">
                                <input asp-for="Email" class="form-input flex w-full rounded-lg border border-[#dbe0e6] dark:border-gray-600 bg-white dark:bg-gray-800 h-12 px-4 pl-11 text-[#111418] dark:text-white placeholder:text-[#617589] dark:placeholder:text-gray-500 focus:border-primary focus:ring-1 focus:ring-primary focus:outline-none transition-all text-base font-normal leading-normal" placeholder="Ví dụ: SV20241234" type="text" value="" />
                                <div class="absolute left-3 top-1/2 -translate-y-1/2 text-[#617589] dark:text-gray-400 pointer-events-none flex items-center">
                                    <span asp-validation-for="Email" class="material-symbols-outlined text-[20px]">person</span>
                                </div>
                            </div>
                        </div>
                        <!-- Password Field -->
                        <div class="flex flex-col gap-2">
                            <label class="text-[#111418] dark:text-gray-200 text-sm font-medium leading-normal flex justify-between">
                                <span>Mật khẩu</span>
                                @* <a class="text-primary text-sm font-semibold hover:underline" href="#">Quên mật khẩu?</a> *@
                            </label>
                            <div class="relative flex items-center">
                                <input asp-for="Password" class="form-input flex w-full rounded-lg border border-[#dbe0e6] dark:border-gray-600 bg-white dark:bg-gray-800 h-12 px-4 pl-11 pr-11 text-[#111418] dark:text-white placeholder:text-[#617589] dark:placeholder:text-gray-500 focus:border-primary focus:ring-1 focus:ring-primary focus:outline-none transition-all text-base font-normal leading-normal" placeholder="Nhập mật khẩu của bạn" type="password" value="" />
                                <div class="absolute left-3 top-1/2 -translate-y-1/2 text-[#617589] dark:text-gray-400 pointer-events-none flex items-center">
                                    <span asp-validation-for="Password" class="material-symbols-outlined text-[20px]">lock</span>
                                </div>
                                <button class="absolute right-3 top-1/2 -translate-y-1/2 text-[#617589] dark:text-gray-400 hover:text-primary transition-colors flex items-center cursor-pointer" type="button">
                                    <span id="toggleIcon" class="material-symbols-outlined text-[20px]">visibility_off</span>
                                </button>
                            </div>
                        </div>
                        <!-- Login Button -->
                        <button type="submit" class="flex w-full cursor-pointer items-center justify-center overflow-hidden rounded-lg h-12 px-4 bg-primary hover:bg-blue-600 text-white text-base font-bold leading-normal tracking-[0.015em] transition-colors shadow-md mt-2">
                            <span class="truncate">Đăng nhập</span>
                        </button>
                        <!-- Divider -->
                        @* <div class="relative py-2">
                            <div class="absolute inset-0 flex items-center">
                                <div class="w-full border-t border-[#e5e7eb] dark:border-gray-700"></div>
                            </div>
                            <div class="relative flex justify-center">
                                <span class="bg-white dark:bg-[#1a2632] px-2 text-sm text-[#617589] dark:text-gray-400">hoặc</span>
                            </div>
                        </div> *@
                        <!-- Register Link -->
                        @* <div class="flex justify-center gap-2 text-sm">
                            <span class="text-[#617589] dark:text-gray-400">Chưa có tài khoản?</span>
                            <a class="text-primary font-bold hover:underline" href="#">Đăng ký ngay</a>
                        </div> *@
                    </form>
                </div>
            </div>
        </div>
    </main>
    <!-- Simple Footer -->
    <footer class="py-6 text-center text-sm text-[#617589] dark:text-gray-500">
        <p>© 2024 University Performance System. Bảo lưu mọi quyền.</p>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const passwordInput = document.querySelector('input[asp-for="Password"]') ||
                                 document.querySelector('input[type="password"]');
            const toggleButton = document.querySelector('button[type="button"]');
            const toggleIcon = document.getElementById('toggleIcon');

            if (toggleButton && passwordInput && toggleIcon) {
                toggleButton.addEventListener('click', function(e) {
                    e.preventDefault();
                    if (passwordInput.type === 'password') {
                        passwordInput.type = 'text';
                        toggleIcon.textContent = 'visibility';
                    } else {
                        passwordInput.type = 'password';
                        toggleIcon.textContent = 'visibility_off';
                    }
                });
            }
        });
    </script>

</body>
</html>
